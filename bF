function makeFile(path)

  if not path then
    error("Missing: String path")
  end

  local h = fs.open(path, "w")
  h.close()
end

function readLines(path, a, b)

  if not path then
    error("Missing: String path")
  end

  local data = {}
  local f

  if fs.exists(path) then
    f = fs.open(path, "r")
  else
    return false
  end

  i = 1

  if b ~= nil then
    for i = 1, b-1 do
      f.readLine()
      i = i + 1
    end
  end

  if a ~= nil then
    for i = 1, a do
      data[i] = f.readLine()
      i = i + 1
    end
  else
    i = 1
    while true do
      data[i] = f.readLine()
      if data[i] == nil then
        break
      end
      i = i + 1
    end
  end

  f.close()

  return data

end
