function makeEmpty(path)
  local h = fs.open(path, "w")
  h.close()
  return "r"
end

function readLine(path, a, b)

  local data = {}

  local f = fs.open(path, fs.exists(path) and "r" or makeEmpty(path))

  if b ~= nil then
    for i = 1, b do
      data[i] = f.readLine()
      i = i + 1
    end
  end

  for i = 1, a do
    data[i] = f.readLine()
    i = i + 1
  end

  f.close()

  return data

end
